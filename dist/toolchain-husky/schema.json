{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "toolchainHuskySchema",
  "title": "toolchain husky options schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "toolchain-commitlint": {
      "type": "boolean",
      "default": true,
      "description": "enable toolchain commitlint support"
    },
    "toolchain-lint-staged": {
      "type": "boolean",
      "default": true,
      "description": "enable toolchain lint-staged support"
    }
  }
}
