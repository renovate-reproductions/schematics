{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "toolchainEslintSchema",
  "title": "toolchain eslint options schema",
  "type": "object",
  "properties": {
    "toolchain-typescript": {
      "type": "boolean",
      "description": "enable toolchain typescript",
      "default": true,
      "x-prompt": "开启 typescript 工具链支持"
    },
    "toolchain-prettier": {
      "type": "boolean",
      "description": "enable toolchain prettier",
      "default": true,
      "x-prompt": "开启 prettier 工具链支持"
    },
    "toolchain-lerna": {
      "type": "boolean",
      "description": "enable toolchain lerna",
      "default": false,
      "x-prompt": "开启 lerna 工具链支持"
    },
    "target": {
      "type": "string",
      "description": "目标平台",
      "default": "node",
      "enum": ["node", "react", "react-with-jsx-runtime", "vue"],
      "x-prompt": {
        "message": "请选择目标平台",
        "type": "list",
        "items": [
          {
            "label": "node",
            "value": "node"
          },
          {
            "label": "react",
            "value": "react"
          },
          {
            "label": "react with jsx runtime",
            "value": "react-with-jsx-runtime"
          },
          {
            "label": "vue",
            "value": "vue"
          }
        ]
      }
    }
  }
}
