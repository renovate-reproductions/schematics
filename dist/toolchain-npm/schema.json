{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "toolchainNpmSchema",
  "type": "object",
  "properties": {
    "registry": {
      "type": "string",
      "description": "the registry used",
      "default": "https://registry.npmmirror.com",
      "enum": ["https://registry.npmjs.org", "https://registry.npmmirror.com", "http://r.npm.sankuai.com"],
      "x-prompt": "选择需要使用的 registry 源"
    },
    "engine-strict": {
      "type": "boolean",
      "description": "npm check engines strict",
      "default": true
    },
    "with-yarn": {
      "type": "boolean",
      "default": true,
      "description": "enable yarn support",
      "x-prompt": "添加 yarn 支持， 生成 .yarnrc"
    },
    "with-nvm": {
      "type": "boolean",
      "default": true,
      "description": "enable nvm support",
      "x-prompt": "添加 nvm 支持，生成 .nvmrc"
    }
  }
}
